<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="4dp">
    <Spinner android:id="@+id/spinnerDiceRow" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
    <EditText android:id="@+id/editDiceCountRow" android:layout_width="60dp" android:layout_height="wrap_content" android:hint="Qty" android:inputType="number" android:text="1"/>
    <ImageButton android:id="@+id/btnRemoveRow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@android:drawable/ic_menu_delete" android:background="?attr/selectableItemBackgroundBorderless"/>
</LinearLayout>
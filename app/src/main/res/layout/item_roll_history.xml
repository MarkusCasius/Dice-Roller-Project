<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <TextView
        android:id="@+id/txtHistoryDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2x D20"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/txtHistoryTotal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtHistoryResults"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="[18, 5]"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/txtHistoryTotal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtHistoryDescription" />

    <TextView
        android:id="@+id/txtHistoryTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oct 24, 14:00"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtHistoryResults" />

    <TextView
        android:id="@+id/txtHistoryTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>